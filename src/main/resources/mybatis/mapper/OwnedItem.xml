<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.fkream.ownedItems.OwnedItemMapper">
    <resultMap id="OwnedItemResultMap" type="com.flab.fkream.ownedItems.OwnedItem">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="itemSizePriceId" column="item_size_price_id"/>
        <result property="purchasePrice" column="purchase_price"/>
    </resultMap>

    <insert id="save" parameterType="com.flab.fkream.ownedItems.OwnedItem" useGeneratedKeys="true"
        keyProperty="id">
        insert into OWNED_ITEMS (USER_ID, ITEM_SIZE_PRICE_ID, PURCHASE_PRICE)
        values (#{userId}, #{itemSizePriceId}, #{purchasePrice})
    </insert>

    <select id="findOne" resultMap="OwnedItemResultMap">
        select *
        from OWNED_ITEMS
        where ID = #{id}
    </select>

    <select id="findAllByUserId" resultMap="OwnedItemResultMap">
        select *
        from OWNED_ITEMS
        where USER_ID = #{userId}
    </select>

    <update id="update">
        update OWNED_ITEMS
        set USER_ID            = #{userId},
            ITEM_SIZE_PRICE_ID = #{itemSizePriceId}
        where ID = #{id}
    </update>

    <delete id="delete">
        delete
        from OWNED_ITEMS
        where ID = #{id}
    </delete>
</mapper>